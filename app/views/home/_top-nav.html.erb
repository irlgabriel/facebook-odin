


<div class='m-0 p-0 navbar border-bottom border-light position-sticky sticky-top row' style='background-color: white;'>  

  <!-- left (intro and searchbar) -->
  <div class='col-3 d-flex'>
    <%= link_to home_path do %>
      <i class="fab fa-facebook" style='font-size: 40px' >&nbsp;</i>
    <% end %>
    
    <i class="fas fa-search p-2 bg-light rounded-circle" style='font-size: 25px'></i>

  </div>

  <!-- middle (fontawesome icons) -->
  <div class='fas-div col-6 d-flex'>

    <!-- home fa -->
    <div class='fa-div py-2 w-100 text-center blue-border border-3' style='color:blue;'>
      <i class="fas fa-house-user"></i>
    </div>

    <!-- friends fa-->
    <div class='fa-div py-2 w-100 text-center'>
    <i class="far fa-user"></i>
    </div>

    <div class='fa-div py-2 text-center w-100'>
      <i class="fas fa-tv"></i>
    </div>

    <div class='fa-div py-2 text-center w-100'>
      <i class="fas fa-bullhorn"></i>
    </div>

    <div class='fa-div py-2 text-center w-100'>
      <i class="fas fa-bars"></i>
    </div>
  </div>

  <!-- right (profile things) --> 
  <div class='col-3'> <!-- d-flex just for now -->
    <%= link_to '', data: {toggle: 'collapse', target:'#top-nav-dropdown'} do %>
      <i class="fas fa-caret-down px-2 py-1 rounded-circle bg-light" style='font-size: 30px; color: black;'></i>
    <% end %>

    <div class='collapse position-absolute bg-white border-radius-10 p-3' id='top-nav-dropdown'>
      <div class='gray-hover p-2'>
        <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
      </div>

    </div>

  </div> <!-- ends right top-nav col -->

</div> <!-- ends top-nav div -->

<script>

fadivs = document.querySelectorAll('.fa-div');
fadivs.forEach(element => {
    element.addEventListener('click', function() {
        fadivs.forEach(element => {
          element.classList.remove('blue-border');
          element.classList.remove('border-3');
          element.style.color = 'black'
        });
        element.style.color = 'blue';
        element.classList.add('blue-border');
        element.classList.add('border-3');
    });
});
</script>