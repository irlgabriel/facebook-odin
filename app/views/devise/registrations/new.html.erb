<div style='height: 30px'></div>
<h2 class=" pt-3 text-center text-info">Sign up</h2>
<div class="form-group mx-auto mt-3" style="min-height: 70vh; width: 50%;">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.email_field :email, placeholder: 'Email', class: "form-control" %>
    </div>
    <div class='row'>
      <div class="form-group d-inline-block col-6">
      <em>6 characters minimum</em>
        <%= f.text_field :first_name, placeholder: 'First Name',class: "form-control" %>
      </div>

      <div class="form-group col-6">
      <em>6 characters minimum</em>
        <%= f.text_field :last_name, placeholder: 'Last Name', class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder: '**********',  class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, placeholder: '**********', class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Sign up", class: "btn btn-success py-2 px-3" %>
    </div>

    <%= render "devise/shared/links" %>
  <% end %>
</div>

