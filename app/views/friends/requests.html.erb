<div class='container-fluid' style='background-color: #f5f5f5; min-height: 74vh;'>
  <% @requests.each do |request| %>
    <%= link_to profile_path(request.to_id), class:'py-3 d-flex align-items-center' do %>
      <% if User.find(request.to_id).profile_picture.attachment %>
        <%= image_tag User.find(request.to_id).profile_picture, size:'32x32', class: 'rounded-circle mr-2'%>
      <% else %>
        <%= image_tag 'no_profile_pic.jpg', size:'32x32', class: 'rounded-circle mr-2'%>
      <% end %>
      <p class='text-primary h2'><%= User.find(request.to_id).fullname %></p>
    <% end %>
    
  <% end %>
</div>