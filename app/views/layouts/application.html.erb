<!DOCTYPE html>
<html>
  <head>
    <title>Facebook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@800&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:alert] %>
      <h2 class="alert alert-danger text-center text-dark mb-0"><%= flash[:alert]%></h2>
    <% end %>

    <% if flash[:notice] %>
      <h2 class="alert alert-warning text-center mb-0"><%= flash[:notice] %></h2>
    <% end %>



    <% unless current_page?(home_path) or current_page?(root_path) %>
      <div class='navbar' style='background-color: white;'>
        
        <%= link_to home_path do %>
          <%= image_tag 'fb_logo.svg', size: '40'  %>
        <% end %>

        <% if current_user %>
          <%= link_to 'Sign Out', destroy_session_path(current_user), method: :delete, class:'text-danger h5 font-weight-bold' %>
        <% end %>
        
      </div>
      <div id='navbar-line' class='line'></div>
    <% end %>



    <div id='main-div' class='container-fluid' style='height: 100vh; background-color: #F5F5F5;'>
      <%= yield %>
    </div>

   <%= render 'home/footer' %>

  </body>
</html>
