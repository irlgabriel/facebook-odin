<!DOCTYPE html>
<html>
  <head>
    <title>FacebookOdin</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:alert] %>
      <h2 class="alert alert-danger text-center text-dark mb-0"><%= flash[:alert]%></h2>
    <% end %>

    <% if flash[:notice] %>
      <h2 class="alert alert-warning text-center mb-0"><%= flash[:notice] %></h2>
    <% end %>
    <div class='container'>
      <%= yield %>
    </div>
  </body>
</html>
